.home {
  width: 100vw;
  height: 100vh;
}
.home .data-top {
  height: 30vh;
  background-color: #0984E3;
  color: white;
}
.home .data-top .balance {
  height: 40%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx auto;
  font-weight: 600;
  font-size: 36rpx;
  color: #ebebeb;
}
.home .data-top .balance text {
  padding: 10rpx;
  color: white;
  font-size: 46rpx;
}
.home .data-top .total {
  margin: 0 auto;
  padding-top: 40rpx;
  width: 90%;
  border-top: 1rpx solid #cecece;
}
.home .data-top .total .pay-total,
.home .data-top .total .income-total {
  padding: 10rpx;
}
.home .data-top .total .pay-total text,
.home .data-top .total .income-total text {
  font-weight: 600;
}
.home .data-content .select-data {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 50rpx;
  background-color: #f5f5f5;
  font-size: 24rpx;
  box-shadow: 0 0 5rpx 1rpx #e0e0e0;
}
.home .data-content .select-data > view {
  padding: 0 30rpx;
}
.home .data-content .select-data .num {
  display: flex;
  justify-content: space-between;
}
.home .data-content .select-data .num > view {
  margin-left: 20rpx;
}
.home .data-content .select-data .num > view > text {
  font-weight: 600;
}
.home .data-content .select-data .picker {
  display: flex;
}
.home .data-content .select-data .picker .date {
  padding: 0 16rpx;
  color: #747474;
}
.home .data-content .select-data .picker .text {
  padding-right: 30rpx;
  color: #0984E3;
}
.home .data-content .booking-null {
  padding: 100rpx 0;
  text-align: center;
  color: #c4c4c4;
}
.home .pay-text {
  color: #ff0808;
}
.home .income-text {
  color: #08ff08;
}
